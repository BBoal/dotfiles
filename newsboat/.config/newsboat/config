# basic settings
text-width 80
browser "newsboatbrowser"
auto-reload no
show-keymap-hint yes

# keybindings
bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key e enqueue
bind-key l open
bind-key h quit
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete
bind-key o open-in-browser-and-mark-read 
bind-key O open-all-unread-in-browser-and-mark-read 
bind-key u toggle-article-read 

# colors
color listnormal white default
color listfocus white default reverse
color listnormal_unread green default
color listfocus_unread white default reverse
color info black blue bold
color article white default

# highlight rules
highlight feedlist "\ *https?://[^ ]+" white default bold
highlight feedlist "Blog:" blue default
highlight feedlist "Podcast:" yellow default
highlight feedlist "Youtube:" red default
highlight feedlist "Comics:" magenta default
highlight articlelist "Blog:" blue default
highlight articlelist "Podcast:" yellow default
highlight articlelist "Youtube:" red default
highlight articlelist "Comics:" magenta default
# highlight feedlist "#[[:space:]].+$" blue default bold
highlight articlelist "[[:digit:]]{4}-[[:digit:]]{2}-[[:digit:]]{2}" cyan default
highlight article "https?://[^ ]+" blue default
highlight article "^(Feed|Title|Author|Link|Date):" cyan default

# format entries display
articlelist-format "%t ... %T %> %L  %D"
feedlist-format "%t %u %> %l"
datetime-format "%Y-%m-%d"

# Format of the titles.
feedlist-title-format "(%u/%t) Feeds"
articlelist-title-format "(%u/%t) %T [%U]"
searchresult-title-format "(%u/%t) Search"
filebrowser-title-format "%f %?O?Open File&Save File?"
help-title-format "Help"
selecttag-title-format "Select Tag"
selectfilter-title-format "Select Filter"
itemview-title-format "%T"
urlview-title-format "URLs"
dialogs-title-format "Dialogs"

# podboat
download-path "~/Desktop/newsboat-downloads/podcasts/%h/%n"
download-filename-format %F-%t.%e
player "mpv"
max-downloads 2

# use custom renderer for displaying HTML files.
html-renderer "w3m -dump -T text/html"

macro c set browser "copy(){ echo $1 | pbcopy ;}"; open-in-browser ; set browser linkhandler
macro v set browser "playinmpv"; open-in-browser ; set browser linkhandler
macro y set browser "ts newsboatdownload"; open-in-browser ; set browser linkhandler
macro p set browser "ts newsboatpreview"; open-in-browser ; set browser linkhandler
macro o set browser "open"; open-in-browser ; set browser linkhandler
