#!/bin/sh

set -e

export NOTMUCH_CONFIG="$HOME/.config/notmuch/config"
if [ ! "$1" = "retag" ];then
    GPASS="${GOOGLE_PASSWORD:-$(keypuller)}"
    GOOGLE_PASSWORD="$GPASS" mbsync -a || 
        (touch /tmp/mailpullfailed && exit 1)
    [ -f /tmp/mailpullfailed ] && rm /tmp/mailpullfailed
fi

notmuch new 2>/dev/null

# reindex inbox
# notmuch tag -inbox tag:inbox
# notmuch tag +inbox +imbox 'folder:/INBOX/'

# start with everything in imbox
notmuch tag +imbox tag:inbox

#github
notmuch tag +github 'folder:/INBOX/' 'from:notifications@github.com'

# newsletters
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:yo@dev.to'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:noreply@medium.com'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@dribbble.com'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@screener.in'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:do-not-reply@stackoverflow.email'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:jess@dev.to'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:npm@npmjs.com'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:erik@learnui.design'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:jobs-listings@linkedin.com'
notmuch tag +newsletter +nonotify -imbox 'folder:/INBOX/' 'from:hello@uxdesign.cc'

# bullshit
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:marketradar@newsletter.geojit.net'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@updates.bookmyshow.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:assistant-noreply@google.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@spotify.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:fnalerts-no-reply@firstnaukri.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:irctctourismoffers@irctc.co.in'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:noreply@newsletter.geojit.net'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@hello.geojitconnect.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:info@geojit.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:communications@nsdl.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@entertainment.bookmyshow.com'
notmuch tag +bullshit +nonotify -imbox 'folder:/INBOX/' 'from:newsletter@incrediindia.in'

# known
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:noreply@swiggy.in'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:uber.india@uber.com'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@swiggy.in'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:rapidocare@acko.com'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:info@meetup.com'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@paytm.com'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:noreply@olacabs.com'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:support@vendekin.com'
notmuch tag +known +nonotify -imbox 'folder:/INBOX/' 'from:info@gokhana.com'

# not so important
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:info@bseindia.in'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:hello@splitwise.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:notifications-noreply@linkedin.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:linkedin@e.linkedin.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:alerts@ifttt.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:windowsinsiderprogram@e-mail.microsoft.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@sampark.gov.in'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:upvote-noreply@quora.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:pro@codecademy.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:no-reply@mailer.bookmyshow.com'
notmuch tag +nonimportant +nonotify -imbox 'folder:/INBOX/' 'from:post.bookmyshow.com'
