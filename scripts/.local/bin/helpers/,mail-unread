#!/bin/sh

show() {
    name="$1" && shift
    mails="$(notmuch search "$@" |
        sed 's|\(^[^ ]*\) [^]]*\]|\1|' |
        sed 's/([^(]*)$//;s/^\ */- /')"
    if [ -n "$mails" ]; then
        echo "[$name]
$mails"
    fi
}

show INBOX tag:important and tag:unread and tag:inbox and '-tag:notified'
show TODO tag:todo
