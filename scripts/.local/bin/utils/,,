#!/bin/sh

# Start a new nix shell

set -e

cmd="$1" && shift
hm_nixpkgs_rev="$(nix flake metadata --json $HOME/.config/nixpkgs | jq -r '.locks.nodes.nixpkgs.locked.rev')"
nix-shell --run $SHELL \
	-I "nixpkgs=https://github.com/NixOS/nixpkgs/archive/$hm_nixpkgs_rev.tar.gz" \
	-p "$cmd" --command "'$cmd' $*"
