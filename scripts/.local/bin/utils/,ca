#!/bin/sh

set -e

if echo "$1" | grep -qE '^[0-9][0-9]*$' && [ -z "$2" ]; then
	prevwindowname="$(xdotool getactivewindow getwindowname)"
	[ -n "$1" ] &&
		todo.sh do "$1" |
		grep -E -o "https?://[^ ]*" |
			sort -u | xargs -I{} open '{}'
	[ "$(xdotool getactivewindow getwindowname)" = "$prevwindowname" ] || i3-msg scratchpad show >/dev/null
elif [ -n "$1" ]; then
	todo.sh $*
fi

clear -x
todo.sh | head -n -2 | sort -k1n
