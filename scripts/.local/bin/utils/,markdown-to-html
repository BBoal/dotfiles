#!/bin/sh

# Convert markdown to html once. Use ,markdown-preview for continues updates.

set -e

filename="/tmp/$(xxd -l2 -ps /dev/urandom).html"
cat $DATAFILES_PATH/pandoc-github-template.html > "$filename"
pandoc --no-highlight --template $DATAFILES_PATH/pandoc-github-template.html  --output "$filename" -f gfm -t html5 --metadata title="$1 - Preview" "$1"
open "$filename"
