#!/bin/sh

# Send notification

set -e

if [ $OSTYPE == "linux-gnu" ]; then
	notify-desktop "${1:-Notification}" "${2}" >/dev/null 2>/dev/null
else
	[ -n $2 ] &&
		osascript -e "display notification \"${2}\" with title \"${1}\"" ||
		osascript -e "display notification \"${1}\" with title \"Notification\""
fi
