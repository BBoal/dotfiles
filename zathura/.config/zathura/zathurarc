# keybindings
map r reload
map p print
map i recolor
map K zoom out
map J zoom in
map - zoom out
map = zoom in
map 0 zoom 0
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# stop at page boundaries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set scroll-page-aware "true"
set smooth-scroll "true"

# update defaults
set adjust-open "best-fit"
set pages-per-row 1
set zoom-min 10

set font "Iosevka 8"
set selection-clipboard clipboard # use clipboard instead of primary-selection

