#!/bin/zsh

alias ls='lsd --date relative --icon never --blocks permission,size,date,name --size short'
alias ss='ls -lht'
alias ll='ls -Alh'
alias llg='ls -Alh --group-directories-first'
alias l='ls'
alias la='ls -A'
alias lr='ls -lRht'

alias c='clear && echo "" && pwd && ls'
alias cl='clear && ls'

alias q="exit"
alias :q="exit"

alias f='fg'

alias mkdir='mkdir -p'

alias rm='trash'

alias r='lf'

alias o='open .'

alias p='cd ~/Documents/Projects'
alias pg='cd ~/.go/src/github.com'
alias pc='cd ~/Documents/Projects/others/clones'
alias pw='cd ~/Downloads'
alias pd='cd ~/Desktop'
alias pt='cd ~/.Trash'
alias pm='cd ~/Documents/Media'
alias pp='cd ~/Documents/Projects/projects'

alias df='cd ~/.dotfiles'
alias s='cd ~/Documents/Projects/work/saama'

alias cleanup="fd '.DS_Store' --no-ignore --hidden -x rm -v"

alias lynx='lynx -lss="~/.lynx.lss"'
alias cat='bat'

alias python='python3'
alias pip='pip3'
