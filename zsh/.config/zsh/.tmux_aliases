#! /bin/sh

t() {
    SESSION="$1"
    if [ -z "$1" ]; then
        if [ -n "$( tmux ls )" ]; then
            SESSION=$(tmux ls | sed 's/:.*//g' | fzf --height 20% --layout=reverse --prompt "Session: " --preview 'tmux ls | grep {}' --preview-window up:1 --print-query | \tail -n1)
        fi
    fi

    if [ -n "$SESSION" ]; then
        tmuxsession "$SESSION"
    fi
}

tc(){
    CURRENT_SESSION=$(tmux display-message -p "#S")
    tmux switch-client -l || tmux switch-client -n
    tmux kill-session -t "$CURRENT_SESSION"
}

tt() {
	if [ -z "$1" ]; then
		FOLDER=$(pwd | xargs basename | sed 's:^\.::')
		tmuxsession "$FOLDER"
	else
		mkdir "$1"
		cd "$1" || return 1
		tmuxsession "$1"
	fi
}

ttc() {
    CURRENT_SESSION=$(tmux display-message -p "#S")
    if [ -z "$1" ]; then
	    FOLDER=$(pwd | xargs basename | sed 's:^\.::')
	    tmuxsession "$FOLDER"
    else
	    mkdir "$1"
	    cd "$1" || return 1
	    tmuxsession "$1"
    fi
    tmux kill-session -t "$CURRENT_SESSION"
}


alias tm='tmux'
alias ta='tmux attach -t'
alias tn='tmux new-session -s'
alias tl='tmux list-sessions'
alias tksv='tmux kill-server'
alias tkss='tmux kill-session -t'

alias tx='tmuxinator'
alias td="(cd ~/.dotfiles > /dev/null && tmuxsession dotfiles 2> /dev/null)"
