#!/bin/sh

alias vim='nvim'
alias ivm='vim'
alias vm='nvim'
alias vi='nvim'

alias viml='nvim -c :SLoad\ zzz'

v() {
    FILE="$(git ls-files 2>/dev/null | fzf)"
    if [ -n "$FILE" ];then
        $EDITOR "$FILE"
    else
        $EDITOR
    fi
}

vv() {
    $EDITOR +OpenLastFile
}

vs() {
    nvim "scp://$1/"
}
