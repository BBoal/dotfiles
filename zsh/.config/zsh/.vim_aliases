#!/bin/sh

alias vim='nvim'
alias ivm='vim'
alias vm='nvim'
alias vi='nvim'

v() {
    git ls-files | fzf -m --preview "cat {}" | xargs nvim
}

vv() {
    $EDITOR +OpenLastFile
}

vs() {
    nvim "scp://$1/"
}
viml() {
    [ ! -f /tmp/vim-prev ] && echo 'No previous session available' && return 0
    nvim "+source /tmp/vim-prev"
}
