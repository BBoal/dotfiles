#!/bin/zsh
db() {
    if [ -z $1 ]
    then
        echo 'Building docker imgae...'
        docker build . | tee /dev/tty |  tail -n 1 | cut -d' ' -f3 | pbcopy
    else
        docker build -t $1 .
    fi
}

dr() {
    if [ -z $1 ]
    then
        docker run -it $(docker images --format "{{.ID}}\n{{.Repository}}" | grep -v '<none>' | sort -r | fzf)
    else
        docker run -it $1 .
    fi
}
