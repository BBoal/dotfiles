#!/bin/zsh
db() {
    if [ -z $1 ]
    then
        docker build .
        IMG_ID=`docker images --format "{{.ID}}" | head -n1`
        echo "$IMG_ID" | pbcopy
        # notify "Docker build complete. ($IMG_ID)"
    else
        docker build -t $1 .
    fi
}

dr() {
    if [ -z $1 ]
    then
        docker run -it $(docker images --format "{{.ID}}\n{{.Repository}}" | grep -v '<none>' | fzf)
    else
        docker run -it "${@:1}"
    fi
}

dbr(){
    if docker build .; then
        IMG_ID=`docker images --format "{{.ID}}" | head -n1`
        docker run $@ -it $IMG_ID
    fi
}
