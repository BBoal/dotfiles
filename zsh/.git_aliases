get_git_files_changed(){
	git status --short | grep -v ' D ' | grep -v '?? ' | sed 's:^...::g' | sed 's:.*/::g' | tr '\n' ',' | sed s/,$//g
}
get_git_branch(){
    git branch | grep \* | sed s/^\*\ //g
}
get_change_message(){
    echo "($(get_git_files_changed)):" | vipe | cat
}

alias g='git status -s'
alias gs='git status'

alias ga='git add'
alias gau='git add -u'

alias gc='git commit'
alias gm='git commit -m'

alias gva='git commit --amend'
alias gv='git add -u && git commit'
alias gh="git add -u && git commit -m"
alias gca='git commit -a --amend -C HEAD'

alias gvf='git add -u && git commit -m "$(get_change_message)"'

alias gp='git push origin "$(get_git_branch)"'

alias gl='git lg'
alias gg='git hm'
alias ggg='git lh'
alias gggg='git hi'

alias gd='git diff'
alias gds='git diff --staged'

alias gdp="gd @{1}.."
alias glp="gl @{1}.."

alias gcom='git checkout master'
alias gcob='git checkout -b'
alias gco='git checkout $(git branch | grep -v "\*" | sed s:^..::g | fzf --height 40% --reverse)'
alias gpu='git push origin $(git branch | grep "\*" | sed s:^..::g )'
alias gpl='git pull origin $(git branch | grep "\*" | sed s:^..::g )'
alias gpuf='git push origin $(git branch | sort -r | sed s:^..::g | fzf --height 40% --reverse)'
alias gplf='git pull origin $(git branch | sort -r | sed s:^..::g | fzf --height 40% --reverse)'

alias gap='git add -p && git commit'

# Clean up merged branches
alias gbcl='git branch --merged | egrep -v "(^\*|master|dev)" | xargs git branch -d'
alias gbclr='git remote prune'

