#!/bin/zsh

gitignore() {
    LANGUAGE=$(curl -L -s https://www.gitignore.io/api/list | tr "," "\n" | fzf)
    curl -L -s https://www.gitignore.io/api/$LANGUAGE%2Cmacos > .gitignore
}

gcl() {
    if [ -z "$1" ];then
        GITURL=$(pbpaste)
    else
        GITURL="https://github.com/$1.git"
    fi
    FOLDER="$(echo $GITURL | sed 's/.*\///g' | sed 's/\..*//g')"
    git clone "$GITURL"
    cd "$FOLDER"
}
