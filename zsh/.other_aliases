#! /bin/zsh

alias reload='source ~/.zshrc'

alias j=z

alias yd='youtube-dl'
alias ydp='youtube-dl -o "%(playlist_index)s_%(title)s.%(ext)s"'

alias map='telnet mapscii.me'
alias weather='curl -s wttr.in/thrissur | head -5 | tail -4'

alias sourceworkon='source /usr/local/bin/virtualenvwrapper.sh'

alias m='neomutt'
alias qrf='qr-filetransfer'
alias slack='slack-term -config ~/.slack-term.json'

alias brew='HOMEBREW_NO_AUTO_UPDATE=1 brew'

alias up='TERM="screen-256color" up'

alias ssh='TERM="screen-256color" ssh'
alias gcloud='TERM="screen-256color" gcloud'

alias docupdate="ssh -t idli-chummar 'cd ~/kalan/ReadTheDocs && git pull origin master'"

alias py="python3"

alias ql='qlmanage -p "$@" > /dev/null 2> /dev/null'

alias update='zsh ~/.dotfiles/install/update.sh'

alias pypipublish='python3 setup.py sdist bdist_wheel && twine upload dist/*'

alias song='spotify info'
alias next='spotify next'
alias prev='spotify back'
alias play='spotify play'
alias pause='spotify pause'

alias pipgrep='pip freeze | grep'
alias tig='tig --all'
alias fu="open https://meain.github.io/fugi/"

alias morning="cat ~/.datafiles/morning_pages | xargs open"

alias usage="du -h -d 1 . | sort -hr"

alias how='how2'

alias gcal='gcalcli'
alias gq='gcalcli --calendar="abinsimon10@gmail.com" quick'

alias ax="axel -a -n 10"

alias lock="osascript -e 'tell application \"System Events\" to keystroke \"q\" using {command down,control down}'"

alias mpv='mpv --sub-ass-override=strip'

alias tb='nc termbin.com 9999 | tee /dev/tty | pbcopy'
alias pb='pbpaste | nc termbin.com 9999 | tee /dev/tty | pbcopy'

alias start='./run-dev || npm start'

alias updatessh="rm ~/.ssh/config && gcloud compute config-ssh --ssh-key-file='~/.ssh/gcloud_saama_common' --dry-run | sed 's:.us-central1-c.deeplearning-181416::' | sed '/^#/d' > ~/.ssh/config"

