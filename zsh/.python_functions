#! /bin/sh

rmvenv() {
    VENVNAME=$(workon | fzf --height 30% --layout=reverse)

    printf '%s' "Remove virtualenv $VENVNAME? (y/N): "
    read -r sure

    case $sure in
        [Yy]* ) rm -rf ~/.virtual_envs/"$VENVNAME" && echo "Removed $VENVNAME";;
        * ) echo "OK, keeping it.";;
    esac
}

wf(){
    if ! workon --help >/dev/null; then
        case "$(uname -s)" in
        Darwin)
            . /usr/local/bin/virtualenvwrapper.sh
            ;;
        Linux)
            . "$HOME/.local/bin/virtualenvwrapper.sh"
            ;;
        esac
    fi
    VENVNAME=$(workon | fzf --height 30% --layout=reverse --query="$*")
    if [ -n "$VENVNAME" ];then
        workon "$VENVNAME"
    fi
}
